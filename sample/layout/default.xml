<?xml version="1.0" encoding="UTF-8"?>
<!-- sample layout update as xml -->
<page>
    <!-- set the root/layout template -->
    <layout>layout/2cols-left</layout>
    <!-- add view helpers -->
    <view_helpers>
        <headTitle>
            <separator method="setSeparator" separator=" - " />
            <default method="prepend" value="Default Title" />
        </headTitle>
        <headLink>
            <twbs href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />
        </headLink>
        <inlineScript>
            <jquery href="//code.jquery.com/jquery-2.1.3.min.js" />
            <twbs href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js' depends="jquery" />
        </inlineScript>
        <headMeta>
            <charset method="setCharset" charset="utf8" />
        </headMeta>
    </view_helpers>    
    <!-- Blocks -->
    <blocks>        
        <!-- default layout -->
        <head template="layout/partials/head" capture_to="head">
            <options after="action.result" />
        </head>    
        <header capture_to="header" template="layout/partials/header" />
        <navbar.brand capture_to="header::navbar" template="layout/partials/navbar/brand">
            <options after="navbar.toggle" />
        </navbar.brand>
        <navbar.toggle capture_to="header::navbar" template="layout/partials/navbar/toggle" />
        <navigation capture_to="header::navigation" template="layout/partials/navigation" />
        <footer capture_to="footer" template="layout/partials/footer" />
        <!-- sidebar widgets -->
        <widget.hello.world capture_to="sidebarPrimary" template="widgets/hello-world">
            <variables heading="Hello" body="World" />
            <options order="-10" />
        </widget.hello.world>
        <another.widget capture_to="sidebarPrimary" template="widgets/hello-world">
            <variables heading="Another widget" body="Lorem Ipsum dolor sit amet." />
        </another.widget>
    </blocks>
</page>
